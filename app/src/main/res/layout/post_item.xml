<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lbl_post_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="1"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="@+id/lbl_post_id"
        app:layout_constraintTop_toBottomOf="@+id/lbl_post_id" />

    <TextView
        android:id="@+id/lbl_user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="@id/lbl_id"
        app:layout_constraintTop_toBottomOf="@id/lbl_id" />

    <TextView
        android:id="@+id/lbl_user_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="@id/lbl_user_title"
        app:layout_constraintTop_toBottomOf="@+id/lbl_user_title" />
</androidx.constraintlayout.widget.ConstraintLayout>